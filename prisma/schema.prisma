generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int             @id @default(autoincrement())
  username  String
  email     String          @unique
  password  String
  createdAt DateTime        @default(now())
  addresses WalletAddress[]
}

model WalletAddress {
  id        Int      @id @default(autoincrement())
  address   String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

